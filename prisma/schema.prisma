generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}



enum Role {
  TEACHER
  STUDENT
  ADMIN
}

// Matière enseignée
enum Subject {
  MATHEMATIQUES
  FRANCAIS
  HISTOIRE_GEOGRAPHIE
  SCIENCES
  PHYSIQUE_CHIMIE
  SVT
  TECHNOLOGIE
  ANGLAIS
  ESPAGNOL
  ALLEMAND
  PHILOSOPHIE
  ECONOMIE
  SES
  INFORMATIQUE
  ARTS_PLASTIQUES
  MUSIQUE
  EPS
  EMC
  LATIN
  GREC
  AUTRE
}

enum Grade {
  A
  B
  C
  D
}

model User {
  id             String    @id @default(cuid())
  email          String?   @unique
  emailVerified  DateTime?
  name           String?
  firstName      String?
  lastName       String?
  image          String?
  role           Role      @default(STUDENT)
  passwordHash   String?
  subject        Subject?
  subjectOther   String?

  accounts       Account[]
  sessions       Session[]

  classrooms     Classroom[]         @relation("TeacherClassrooms")
  domains        CompetencyDomain[]  @relation("TeacherDomains")
  sessionsLed    EvaluationSession[] @relation("TeacherSessions")

  enrollments    Enrollment[]        @relation("StudentEnrollments")
  evaluations    Evaluation[]        @relation("StudentEvaluations")
  groupMemberships GroupMembership[] @relation("StudentGroupMemberships")

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([role])
}

model Classroom {
  id          String    @id @default(cuid())
  name        String
  description String?
  teacher     User      @relation("TeacherClassrooms", fields: [teacherId], references: [id], onDelete: Cascade)
  teacherId   String

  enrollments Enrollment[]
  sessions    EvaluationSession[]
  groups      Group[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([teacherId])
  @@unique([teacherId, name])
}

model Enrollment {
  id           String    @id @default(cuid())
  classroom    Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  classroomId  String
  student      User      @relation("StudentEnrollments", fields: [studentId], references: [id], onDelete: Cascade)
  studentId    String

  seatNumber   String?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())

  @@unique([classroomId, studentId])
  @@index([studentId])
  @@index([classroomId])
}

model CompetencyDomain {
  id           String       @id @default(cuid())
  title        String
  description  String?
  createdBy    User         @relation("TeacherDomains", fields: [createdById], references: [id], onDelete: Cascade)
  createdById  String

  competencies Competency[]

  isArchived   Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([createdById, title])
  @@index([createdById])
}

model Competency {
  id           String            @id @default(cuid())
  domain       CompetencyDomain  @relation(fields: [domainId], references: [id], onDelete: Cascade)
  domainId     String

  code         String?
  title        String
  description  String?
  isActive     Boolean           @default(true)

  evaluations  Evaluation[]
  sessionCompetencies SessionCompetency[]

  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@unique([domainId, title])
  @@index([domainId])
  @@index([code])
}

// Groupes au sein d'une classe
model Group {
  id           String     @id @default(cuid())
  name         String
  description  String?
  classroom    Classroom  @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  classroomId  String

  memberships  GroupMembership[]
  sessions     EvaluationSession[]

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([classroomId, name])
  @@index([classroomId])
}

// Appartenance des élèves aux groupes (un élève peut être dans plusieurs groupes)
model GroupMembership {
  id         String   @id @default(cuid())
  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId    String
  student    User     @relation("StudentGroupMemberships", fields: [studentId], references: [id], onDelete: Cascade)
  studentId  String

  joinedAt   DateTime @default(now())

  @@unique([groupId, studentId])
  @@index([studentId])
  @@index([groupId])
}

model EvaluationSession {
  id           String     @id @default(cuid())
  name         String?
  classroom    Classroom  @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  classroomId  String
  teacher      User       @relation("TeacherSessions", fields: [teacherId], references: [id], onDelete: Cascade)
  teacherId    String
  group        Group?     @relation(fields: [groupId], references: [id], onDelete: SetNull)
  groupId      String?

  startedAt    DateTime   @default(now())
  endedAt      DateTime?

  evaluations  Evaluation[]
  selectedCompetencies SessionCompetency[]

  @@index([classroomId])
  @@index([teacherId])
  @@index([startedAt])
  @@index([groupId])
}

// Compétences sélectionnées pour une session
model SessionCompetency {
  id            String            @id @default(cuid())
  session       EvaluationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId     String
  competency    Competency        @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  competencyId  String

  @@unique([sessionId, competencyId])
  @@index([sessionId])
  @@index([competencyId])
}

model Evaluation {
  id            String            @id @default(cuid())
  session       EvaluationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId     String
  student       User              @relation("StudentEvaluations", fields: [studentId], references: [id], onDelete: Cascade)
  studentId     String
  competency    Competency        @relation(fields: [competencyId], references: [id], onDelete: Restrict)
  competencyId  String

  grade         Grade
  comment       String?

  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@unique([sessionId, studentId, competencyId])
  @@index([studentId])
  @@index([competencyId])
  @@index([sessionId])
  @@index([studentId, competencyId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
